<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margen5"
    tools:context="com.example.a21608838.appalmacenamiento.AExternoActivity">

    <TextView
        android:id="@+id/tvTexto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Introduce un texto"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etTexto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvTexto1"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Escriba aqui su texto"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnGuardarAE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:onClick="guardarAE"
        android:text="Guardar" />

</RelativeLayout>
